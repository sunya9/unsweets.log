<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <link rel="canonical" href="<%= url %>">
  <% const dev = env.env !== 'production' %>
  <% const host = dev ? 'http://localhost:3001/' : '/' %>
  <% if(!dev) { %>
    <link rel="stylesheet" href="<%= `${host}css/main.css` %>">
  <% } %>
  <link href="//fonts.googleapis.com/css?family=Quicksand:300|Inconsolata" id="google-fonts">
  <% if(config.feed) { %>
  <%- feed_tag(`/${config.feed.path}`, {
    type: config.feed.type
  }) %>
  <% } %>
  <link rel="shortcut icon" href="/favicon.ico">
  <meta name="theme-color" content="#569d90">
  <script async>
  document.getElementById('google-fonts').rel = 'stylesheet'
  </script>
  <title>
    <% if(!is_home()) { %>
      <%= page_title() + ' - ' + config.title %>
    <% } else { %>
      <%= config.title %>
    <% } %>
  </title>
</head>
<body>
  <div id="wrapper" class="wrapper">
    <%- partial('_partial/header') %>
    <main class="page-contents">
      <div class="container">
        <%- body %>
      </div>
    </main>
    <%- partial('_partial/footer') %>
  </div>
  <% if(!dev) { %>
  <script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-10104011-7', 'auto');
  ga('send', 'pageview');

  </script>
  <% } %>
  <script src="<%= `${host}js/main.js` %>"></script>  
</body>
</html>
